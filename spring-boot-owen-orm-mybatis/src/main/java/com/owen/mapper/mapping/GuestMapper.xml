<!--映射文件的目的就是一些SQL语句-->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.owen.mapper.GuestMapper">

    <select id="findAll" resultType="com.owen.bean.Guest">
        SELECT
            id,
            `name`,
            role
        FROM
            guest;
    </select>
</mapper>